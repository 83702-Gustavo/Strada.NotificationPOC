{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=notificationdb;Username=postgres;Password=postgres"
  },
  "NotificationProviders": {
    "SmsSettings": {
      "Priorities": [
        "Twilio",
        "Zenvia"
      ]
    },
    "Zenvia": {
      "ServiceUrl": "https://api.zenvia.com/v2/channels/sms/messages",
      "ApiKey": "your-zenvia-api-key",
      "FromPhoneNumber": "+1234567890"
    },
    "Email": {
      "SmtpHost": "smtp.gmail.com",
      "SmtpPort": 587,
      "SmtpUsername": "your-email@gmail.com",
      "SmtpPassword": "your-email-password"
    },
    "Push": {
      "ServiceUrl": "https://fcm.googleapis.com/fcm/send",
      "ApiKey": "your-firebase-api-key"
    },
    "WhatsApp": {
      "AccountSid": "your-whatsapp-account-sid",
      "AuthToken": "your-whatsapp-auth-token",
      "FromPhoneNumber": "+1234567890"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/log-.txt", "rollingInterval": "Day" } }
    ]
  }
}